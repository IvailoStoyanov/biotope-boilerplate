{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["esnext", "dom"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"target": "ES5"
	},
	"typeRoots": [
		"node_modules/@types"
	],
	"types": [
		"react",
		"react-dom",
		"jquery"
	],
	"exclude": [
		"patterns",
		"test",
		"dist",
		".tmp",
		"**/*.spec.ts"
	]
}
