{
  "name": "biotope",
  "title": "Biotope - The Frontend Ecosystem Framework",
  "version": "7.0.0-alpha2",
  "description": "Modern HTML5 UI Framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/biotope/biotope.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "yarn build && yarn serve",
    "build": "biotope-build compile",
    "build:dev": "yarn build --environment dev",
    "build:prod": "yarn build --environment prod",
    "watch": "yarn build --watch",
    "lint": "yarn lint:code && yarn lint:style",
    "lint:code": "biotope-build lint --typescript",
    "lint:style": "biotope-build lint --sass",
    "test": "biotope-build test",
    "serve": "biotope-build serve",
    "serve:open": "yarn serve --open",
    "serve:prod": "biotope-build serve --production"
  },
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.4.0"
  },
  "dependencies": {
    "@biotope/build": "tiagomapmarques/biotope-build#v7",
    "load-entry": "~1.1"
  }
}
